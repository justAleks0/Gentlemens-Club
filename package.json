{
  "name": "gentlemens-club",
  "version": "1.0.0",
  "description": "Gentlemen's Club - Personal Media Library Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "Aleks",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.gentlemensclub.app",
    "productName": "Gentlemen's Club",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "logo.png"
    }
  }
}
